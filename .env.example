# ===================================
# Customer Portal Environment Variables
# ===================================

# Database Configuration
# For development: SQLite
# For production: PostgreSQL (Supabase, Neon, or similar)
DATABASE_URL="file:./prisma/dev.db"
DATABASE_PROVIDER="sqlite"

# Production Database Example (PostgreSQL)
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"
# DATABASE_PROVIDER="postgresql"

# Authentication Configuration (REQUIRED)
# Generate secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# Firebase Configuration (REQUIRED - shared with main app)
# Same values as main application
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Stripe Configuration (REQUIRED for payments)
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Email Service (REQUIRED for emails)
# Same as main application
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@caravantransport.io

# Admin Configuration
ADMIN_EMAILS=admin@caravantransport.io,support@caravantransport.io

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAIN_SITE_URL=http://localhost:5173

# Production URLs
# NEXT_PUBLIC_APP_URL=https://portal.caravantransport.io
# NEXT_PUBLIC_MAIN_SITE_URL=https://www.caravantransport.io

# Optional: Supabase (if using for auth/database)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Optional: Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Feature Flags
# NEXT_PUBLIC_ENABLE_CHAT=true
# NEXT_PUBLIC_ENABLE_REVIEWS=true
# NEXT_PUBLIC_MAINTENANCE_MODE=false

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1